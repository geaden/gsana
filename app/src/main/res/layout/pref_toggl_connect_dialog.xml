<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/toggl_api_edit_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_margin"
        android:hint="You Toggle API token"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/toggl_connect_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pref_toggl_connect" />
        <Button
            android:id="@+id/toggl_cancel_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pref_toggle_cancel" />
    </LinearLayout>

</LinearLayout>