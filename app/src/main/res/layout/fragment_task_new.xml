<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gsana_background_color"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TaskCreateFragment">
    
    <EditText
        android:layout_width="match_parent"
        android:hint="Task Name"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:id="@+id/task_name"
        android:layout_height="20pt"
        android:layout_weight="1" />

    <!-- Workspaces -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/drawer_workspaces_title_size"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/drawer_workspaces_title"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/spinner_workspaces"
        android:textColor="@android:color/white"
        tools:listitem="@layout/spinner_item"
        android:textColorHint="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <!-- Projects -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/drawer_workspaces_title_size"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/drawer_projects_title"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/spinner_projects"
        tools:listitem="@layout/spinner_item"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:hint="Task Description"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:id="@+id/task_description"
        android:layout_height="100pt"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Save"
        android:drawableLeft="@drawable/ic_tic"
        android:background="@color/gsana_background_color"
        android:textColor="@android:color/white"
        android:id="@+id/save_task_button"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

</LinearLayout>