<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Gsana main theme -->
    <style name="GsanaTheme" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Gsana</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_selected_item</item>
    </style>

    <!-- Gsana action bar -->
    <style name="ActionBar.Solid.Gsana" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/gsana_background_color</item>
        <item name="android:actionDropDownStyle">@style/SpinnerColor</item>
    </style>

    <!-- Gsana spinner style -->
    <style name="SpinnerColor">
        <item name="android:background">@android:color/white</item>
    </style>
</resources>